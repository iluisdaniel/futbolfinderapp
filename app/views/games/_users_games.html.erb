
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Date</th>
        <th>Time</th>
        <th>End Time</th> 
        <th>Location</th>
        <th>User</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% games.each do |game| %>

        <tr>
          <td><%= link_to game.id, game %></td>
          <td><%=  get_reservation_date_from_game(game.id) %></td>
          <td><%= get_reservation_time_from_game(game.id) %></td>
           <td><%= get_reservation_end_time_from_game(game.id) %></td>
          <td><%= get_reservation_location_from_game(game.id) %></td>
          <td><%= link_to game.user.name, game.user %></td>
          <td>
          <% if current_user?(game.user) %>
          <%= link_to "delete", game, method: :delete,
                   data: { confirm: "You sure?" },
                   title: game.title %>
          <% end %>
          </td>
        </tr>

      <% end %>  
    </tbody>
  </table>
</div>  


