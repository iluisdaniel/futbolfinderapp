<div class="row">
  <h3 style="padding-left:20px;"><%= subtitle %></h3>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Players Needed</th>
            <th>Players Comfirmed</th>
            <th>Admin</th>
          </tr>
        </thead>
        <tbody>
          <% games.each do |game| %>

            <tr>
              <td><%= link_to game.id, game %></td>
              <td><%= public_or_private(game.public) %></td>
              <td><%= game.number_players %></td>
              <td><%= get_number_of_players_ready(game.id)%></td>
               <td><%= link_to get_game_creator(game).name, get_game_creator(game) %></td>
            </tr>

          <% end %>  
        </tbody>
      </table>
    </div>
  </div>  