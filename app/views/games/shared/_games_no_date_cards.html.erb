<div class="row">
		<h3 class="lead" style="padding-left:20px;"><%= subtitle %></h3>
		<hr>
		<% games.each do |game| %>
			<div class="col-md-4">
				<div class="card card-background">
					<div class="image">
						<img src="<%= get_random_background_image %>" alt="...">
						<div class="filter"></div>
					</div>
					<div class="content">
						<p class="category">
						<span class="label label-success"><%= public_or_private(game.public) %></span>

						<%= link_to get_game_creator(game), class: "pull-right" do %>
							<i class="fa fa-user"></i> <%= get_game_creator(game).name %>
						<% end %>
						</p>

						<%= link_to game do %><br>
							<h4 class="title"><%= game.title %><br>
								<small>No Date Yet</small>
							</h4>
						<% end %>
					</div>
					<div class="footer">
						<i class="fa fa-comment"></i> <%= game.comments.count %> 

						<div class="author pull-right">
						<i class="fa fa-users"></i> <%= get_number_of_players_ready(game.id)%> / <%= game.number_players %>  
						</a>
						</div>
					</div>
				</div><!-- end card background-->
			</div><!-- end col -->
		<% end %>
		
	</div><!-- end row -->