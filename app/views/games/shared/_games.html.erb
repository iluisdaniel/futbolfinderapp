<% if games.empty?  %>
  <div>
    <P class="lead">No games to display.</P>
    <% if !current_page?(controller: '/games/upcoming_games', action: 'index') %>
      <%= link_to 'New Game', new_game_path, class: "btn btn-large btn-primary btn-round btn-fill" %>
    <% end %>  
  </div>
<% else %> 
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3 class="lead" style="padding-left:20px; "><%= subtitle %></h3>
      <hr>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th><i class="fa fa-calendar"></i> Date</th>
              <th><i class="fa fa-map-marker"></i> Location</th>
              <th><i class="fa fa-clock-o"></i> Time</th>
              <th><i class="fa fa-users"></i> Players</th>
              <th><i class="fa fa-soccer-ball-o"></i> Type</th>
              <th><i class="fa fa-user"></i> Admin</th>
            </tr>
          </thead>
          <tbody>
            <% games.each do |game| %>

              <tr>
                <td><%=  link_to get_reservation_month_and_day_from_game(game.id), game %></td>
                <td><%= link_to get_reservation_location_from_game(game.id).name, get_reservation_location_from_game(game.id) %></td>
                
                
                <td><%= get_reservation_time_from_game(game.id) %> - <%= get_reservation_end_time_from_game(game.id) %></td>
                
                <td><%= get_number_of_players_ready(game.id)%> / <%= game.number_players %></td>
                <td><%= game.public %></td>
                <td><%= link_to get_game_creator(game), get_game_creator(game) %></td>
              </tr>

            <% end %>  
          </tbody>
        </table>
      </div><!-- table responsive -->  
    </div>    
  </div><!-- row -->
<% end %>