
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Date</th>
        <th>Time</th>
        <th>End Time</th> 
        <th>Location</th>
        <th>Created</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% games.each do |game| %>

        <tr>
          <td><%= link_to game.id, game %></td>
          <td>Date</td>
          <td>TIme</td>
          <td>End_time</td>
          <td>Location</td>
          <td><%= game.created_at.strftime("%D at %r") %></td>
          <td>
          <% if current_business?(game.business) %>
          <%= link_to "delete", game, method: :delete,
                   data: { confirm: "You sure?" },
                   title: game.title %>
          <% end %>
          </td>
        </tr>

      <% end %>  
    </tbody>
  </table>
</div>  


