<% provide(:title, 'My Games') %>
<% provide(:htitle, 'My Games') %>
<% provide(:secondaryTitle, 'Today')%>

<div class="container" style="margin-top:20px;">
  <% if !are_there_games?%>
    <%= render partial: "games/shared/no_games_message" %>
  <% else %>  

    <div class="row">
      <%= render partial: "games/shared/menu_bar" %>
      <%= render partial: "games/shared/games", locals: {games: @games, subtitle: 'Today'} %>
      
    </div>
  <% end %>  
</div>