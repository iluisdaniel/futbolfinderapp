<% provide(:title, 'All games') %>

<div class="container">
	<h1 style="margin-top: 35px; margin-bottom: 35px;">Games</h1>
	<nav class="navbar navbar-default">
	  <div class="container-fluid">

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="">
	      <ul class="nav navbar-nav">
	        <li><%= link_to "All", games_path, class: ""%></li>
	        <li>
	        	<%= link_to games_path(invited: "Invited") do %>
	        		Invited <span class="badge"> <%= current_user.invited_games.count %> </span>
	        	<% end %>
	        </li>
	        <li>
	        	<%= link_to "Planning", games_path(planning: "Planning") %>
	        </li>
	    </ul>
	      <form class="navbar-form navbar-right">
	        <%= form_tag(games_path, :method => "get", class: "navbar-form navbar-right") do %>
		        <div class="input-group">
		        	  <span class="input-group-addon" id="basic-addon1"><i class="fa fa-calendar"></i></span>
		        	  <%= text_field_tag :date, params[:date], data:{ provide:'datepicker', 'date-format' => 'dd-mm-yyyy', 'date-autoclose' => 'true' }, placeholder: "DD-MM-YYYY", class: "form-control" %>
		        </div>
	        	<div class="input-group">
	        		<span class="input-group-addon" id="basic-addon1"><i class="fa fa-eye"></i></span>
	        		<%= select_tag(:public, options_for_select(['Private', 'Public'], params[:public]),prompt: "Select", class: "form-control") %>
	        	</div>	
	        	<div class="input-group">
	        		<span class="input-group-addon" id="basic-addon1"><i class="fa fa-clock-o"></i></span>
	        		<%= select_tag(:current, options_for_select(['Completed'], params[:current]),prompt: "Current", class: "form-control") %>
	        	</div>
	        	
	        	<%= submit_tag "Search", class: "btn btn-primary btn-fill" %>
	        
	        		<%= link_to "Clear", games_path, class: "pull-left"%>
	        	
	        <% end %>
	      
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>
</div>

<div class="container games" style="margin-top:20px;">
  <% if !are_there_games? %>
    <%= render partial: "games/shared/no_games_message" %>
  <% else %>  
	<div class="row">
    	<div class="col-md-12 col-sm-12">
    		<% if @games.empty? %>
    			<p class="lead"> <%= @msg %></p>
    		<% end %>
			<% @games.each do |game| %>
				<div class="col-md-4 col-sm-6">
					<%if params[:planning] %>
						<%= render partial: "games/shared/game_card_no_date", locals: {game: game} %>
					<% else %>
						<%= render partial: '/games/shared/game_card', locals: {game: game} %>
					<% end %>
				</div><!-- end col -->
			<% end %>
      </div>
    </div>

    <div class="text-center">
        <%= will_paginate @games %>
    </div>
      
    
  <% end %>  
</div>


