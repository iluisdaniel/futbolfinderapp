<% provide(:title, 'New Game') %>
<h1>New Game</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@game) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>	

      <%= f.label :date %>
      <%= f.date_select(:date,prompt: { day: 'choose day', month: 'choose month' }, start_year: Date.today.year, end_year: Date.today.year, class: 'form-control') %>

      <%= f.label :time %>
      <%= f.time_select(:time, prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 30, ignore_date: true, ampm: true, start_hour: 10) %> 

      <%= f.label :end_time %>
      <%= f.time_select(:end_time, prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 30, ignore_date: true, ampm: true, start_hour: 10) %>

      <%= f.label :user_id %>
      <%= f.text_field :user_id, class: 'form-control' %>

      <% if !logged_in? %> 
      <%= f.label :business_id %>
      <%= f.text_field :business_id, class: 'form-control' %>
      <% end %>

      <%= f.label :field_id %>
      <%= f.text_field :field_id, class: 'form-control' %>
            
      <!--<%= f.label #:number_players %>
       <%= f.select #:number_players, ['option1', 'option2'] %>-->


      <%= f.submit "Create game", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
