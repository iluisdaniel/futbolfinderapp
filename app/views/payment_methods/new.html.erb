<% provide(:title, 'New Payment Method') %>
<% provide(:htitle, 'New Payment Method') %>

<div class="container">
	<div class="row">
		<div class="col-md-offset-2 col-md-7 subscription-form-page">

			<div class="card">
				<%= form_tag payment_method_path, id: "payment-form" do |form| %>
					<h3 class="lead">New Payment Method</h3>
				  <div class="form-row">
				    <label for="card-element">
				      Credit or debit card
				    </label>
				    <div id="card-element">
				      <!-- a Stripe Element will be inserted here. -->
				    </div>

				    <!-- Used to display Element errors -->
				    <div id="card-errors" role="alert"></div>
				  </div>

				  <button class="btn btn-primary btn-fill">Submit Payment</button>
				<% end %>
			</div>
		</div>
	</div>
</div>





