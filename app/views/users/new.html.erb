<% provide(:title, 'Sign up') %>

<div class="container user-signup">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Sign up</h1>
    <div class="card">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>	
    <p>Join Futfiner today!</p>
    <hr>

      <%= f.text_field :slug, placeholder: "Username", class: 'form-control' %>

      <%= f.text_field :first_name, placeholder: "First Name", class: 'form-control' %>

      <%= f.text_field :last_name, placeholder: "Last Name", class: 'form-control' %>

      <%= f.select :gender, ['Male','Female'], {prompt: "Gender"}, { class: 'form-control'} %>

      <%= f.text_field :dob, data:{ provide:'datepicker', 'date-format' => 'dd-mm-yyyy', 'date-autoclose' => 'true' }, placeholder: "Date of Birth", class: "form-control" %>

      <%= f.text_field :email, placeholder: "Email", class: 'form-control' %>

      <%= f.text_field :location, placeholder: "Location", class: 'form-control' %>

      <%= f.text_field :phone, placeholder: "Phone", class: 'form-control' %>

      <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>

      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation",  class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary btn-fill btn-round" %>
    <% end %>
    </div>
    <p>Already user? <%= link_to "Sign in", login_path %></p>
  </div>
</div>
</div>