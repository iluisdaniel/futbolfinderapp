<div class="card card-user">
			        <div class="image">
                    	<img src="<%= get_random_background_image %>" alt="...">
                    </div>

			        <div class="content" style="min-height: 0px;">

			            <div class="author">
			                <%= image_tag("300x200.png", :alt => "rss feed", class: "avatar") %>
			                  <h4 class="title"><%= @user.first_name %> <%= @user.last_name %><br />
			                     <small>@<%= @user.slug %></small><br>
			                     <!--<small>Goalkeeper</small>-->
			                  </h4>
			                
			            </div>

			            <p class="description text-center">
			               
		                	 Friends <span style="color:#337ab7;font-weight:700; padding-right: 5%;"><%= @user.friends.count %></span> Games <span style="color:#337ab7;font-weight:700; padding-right: 5%;"><%= @user.games_played %></span>
		                	Friends <span style="color:#337ab7;font-weight:700; padding-right: 5%;"><%= @user.friends.count %></span> 
		                	<br>		                	
		                    <i class="fa fa-map-marker text-muted"></i> <%= @user.location %> <br>

			            </p>

			        </div>

			     

			        <div class="text-center" style="padding-top: 10px; padding-bottom: 10px;">
			        	<% if signed_in? && current_user != @user %>
			        		   <hr>
			        		<%= render partial: '/shared/friendship_buttons', locals: {user: @user}%>
			        	<% end %>	
			            <% if current_user != @user %>
			            	<button href="#" class="btn btn-default btn-fill btn-round"> <i class="fa fa-envelope"></i> Message</button>
			            <% end %>
			        </div>

			    </div> <!-- end card -->