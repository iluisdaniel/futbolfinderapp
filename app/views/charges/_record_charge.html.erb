
  <!-- this may be erased --> 
  <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">

Record Charge <%= charge.id %>
  </button>

  <!-- Modal Core -->

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

      <div class="modal-dialog">

        <div class="modal-content">
          <%= form_tag(record_charge_path)  do %>
          <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

            <h4 class="modal-title" id="myModalLabel">Record Charge for <%= charge.id %></h4>

          </div>

          <div class="modal-body">

           <div class="row">
           </div> 
           
             <div class="row">
               <div class="form-group">
                 <div class="col-md-2">
                  <%= label_tag :amount %>
                 </div>
                 <div class="col-md-8">
                   <div class="col-md-4">
                      <%= number_field_tag :amount %>
                   </div>
                 </div>
               </div>   
             </div>

             <div class="row">
               <div class="form-group">
                 <div class="col-md-2">
                  <%= label_tag :type_payment %>
                 </div>
                 <div class="col-md-8">
                   <div class="col-md-4">
                    <%= select_tag(:type_payment, options_for_select(['Card', 'Cash']), class: "form-control") %>
                   </div>
                 </div>
               </div>   
             </div>
             
             <%= hidden_field_tag :charge, charge.id %>

          </div>

          <div class="modal-footer">

            <button type="button" class="btn btn-default btn-simple" data-dismiss="modal">Close</button>

            <%= submit_tag "Record Charge", class: "btn btn-large btn-primary btn-fill btn-round pull-right" %>

          </div>
          <% end %>
        </div>

      </div>

    </div>