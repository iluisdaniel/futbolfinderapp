<!-- Button trigger modal -->

  <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">

    New Venue

  </button>

  <!-- Modal Core -->

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

      <div class="modal-dialog">

        <div class="modal-content">
          <%= form_for(@reservation) do |f| %>
          <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

            <h4 class="modal-title" id="myModalLabel">New Time</h4>

          </div>

          <div class="modal-body">

           <div class="row">
           <%= render 'shared/error_messages', object: f.object %>
           </div> 

           
             <div class="row">
               <div class="form-group">
                 
                 <div class="col-md-5 col-md-offset-1">
                   <div class="col-md-4">
                     <%= f.label :date, 'Date' %>
                   </div>
                   <div class="col-md-8">
                        <%= text_field_tag :date, params[:date], data:{ provide:'datepicker', 'date-autoclose' => 'true' }, placeholder: "MM-DD-YYYY", class: "form-control", :autocomplete => :off %>
                   </div>
                 </div>
                 <div class="col-md-5">
                   <div class="col-md-4">
                    <%= f.label :duration, 'Duration' %>
                   </div>
                   <div class="col-md-7">
                         <%= select_tag :duration, 
                              options_for_select([
                                  ['1 Hour', '1'],
                                  ['1 Hour 30 Min', '1.5'],
                                  ['2 Hour', '2'],
                                  ['2 Hour 30 Min', '2.5'],
                                  ['3 Hour', '3'],
                                  ['3 Hour 30 Min', '3.5']
                                ], 
                                params[:duration]),  class: "form-control" %>
                   </div>
                 </div>
               </div>   
             </div>
             
             <div class="row">
               <div class="form-group">
                 <div class="col-md-1 col-md-offset-1">
                   <%= f.label :time, 'Time' %>
                 </div>
                 <div class="col-md-8">
                   <div class="col-md-6">
                       <%= time_select :time, params[:time], {prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 30, ignore_date: true, ampm: true, start_hour: 0, time_separator: "</div><div class='col-md-6'>"}, {class: 'form-control'} %> 
                   </div>
                 </div>
               </div>   
             </div>

             <%= hidden_field_tag :game_id, @game.id %>

          </div>

          <div class="modal-footer">

            <button type="button" class="btn btn-default btn-simple" data-dismiss="modal">Close</button>

            <%= f.submit "Create Reservation", class: "btn btn-large btn-primary btn-fill btn-round pull-right" %>

          </div>
          <% end %>
        </div>

      </div>

    </div>