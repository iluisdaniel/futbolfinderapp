<h1>Subscribe</h1>

<% if current_business.card_last4? %>
	<%= form_tag subscription_path, id: "existing-card" do |form| %>
		<p>Use existing card:</p>
		<div><strong>Card on File:</strong> <%= current_business.card_brand %> (**** **** **** <%= current_business.card_last4 %>)</div>
		<div style="margin-bottom: 20px;"><strong>Expiration:</strong> <%= current_business.card_exp_month %> / <%= current_business.card_exp_year %></div>

		<%= hidden_field_tag :plan, params[:plan] %>

		<button>Submit Payment</button>
	<% end %>	
<% end %>



<%= form_tag subscription_path, id: "payment-form" do |form| %>
  <div class="form-row">
    <label for="card-element">
      Credit or debit card
    </label>
    <div id="card-element">
      <!-- a Stripe Element will be inserted here. -->
    </div>

    <!-- Used to display Element errors -->
    <div id="card-errors" role="alert"></div>
  </div>

  <%= hidden_field_tag :plan, params[:plan] %>

  <button>Submit Payment</button>
<% end %>