<button class="btn btn-primary btn-fill btn-round" data-toggle="modal" data-target="#myModal">

   Add Custom Venue and Time

  </button>

  <!-- Modal Core -->

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

      <div class="modal-dialog">

        <div class="modal-content">
          <%= form_for(@custom_venue) do |f| %>
          <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

            <h4 class="modal-title" id="myModalLabel" style="padding-left: 0px">New Venue And Time</h4>

          </div>

          <div class="modal-body">

           <div class="row">
           <%= render 'shared/error_messages', object: f.object %>
           </div> 
           
           <div class="row">
             <div class="col-md-2 col-md-offset-1">
               <%= f.label :address, 'Address' %>
             </div>
             <div class="col-md-8">
               <%= f.text_field :address, placeholder: 'Required', class: "form-control" %>
             </div>
           </div>

           <div class="row">
             <div class="col-md-2 col-md-offset-1">
               <%= f.label :city, 'City' %>
             </div>
             <div class="col-md-8">
               <%= f.text_field :city, placeholder: 'Optional', class: "form-control" %>
             </div>
           </div>

           <div class="row">
             <div class="col-md-2 col-md-offset-1">
               <%= f.label :state, 'State' %>
             </div>
             <div class="col-md-8">
               <%= f.text_field :state, placeholder: 'Optional', class: "form-control" %>
             </div>
           </div>

           <div class="row">
             <div class="col-md-2 col-md-offset-1">
               <%= f.label :zipcode, 'Zipcode' %>
             </div>
             <div class="col-md-8">
               <%= f.text_field :zipcode, placeholder: 'Optional', class: "form-control" %>
             </div>
           </div>


          <hr>

          <div class="row">
            <div class="form-group">
              <div class="col-md-2 col-md-offset-1">
                <%= f.label :ground, "Ground" %>
              </div>
              <div class="col-md-8">
                <%= f.select :ground, ['Grass','Artificial Grass', 'Turf', 'Indoor Court', 'Street'], {prompt: "Optional"}, { class: 'form-control'} %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <div class="col-md-3">
                <%= f.label :field_type, "Field Type" %>
              </div>
              <div class="col-md-8">
                <%= f.select :field_type, ['Indoor','Outdoor'], {prompt: "Optional"}, { class: 'form-control'} %>
              </div>
            </div>
          </div>    

           <div class="row">
            <div class="form-group">
              <div class="col-md-3">
                <%= f.label :number_players, "# Players" %>
              </div>
              <div class="col-md-8">
                <%= f.select :number_players, [['5vs5','10'],['7vs7','14'],['11vs11','22']], {prompt: "Optional"}, { class: 'form-control'} %>
              </div>
            </div>
          </div>  


          <hr>
           
             <div class="row">
               <div class="form-group">
                 <div class="col-md-2 col-md-offset-1">
                   <%= f.label :date, 'Date' %> 
                 </div>
                 <div class="col-md-8">
                      <%= f.text_field :date, data:{ provide:'datepicker', 'date-format' => 'dd-mm-yyyy', 'date-autoclose' => 'true' }, placeholder: "DD-MM-YYYY", class: "form-control" %>
                 </div>
               </div>   
             </div>
             
             <div class="row">
               <div class="form-group">
                 <div class="col-md-2 col-md-offset-1">
                   <%= f.label :time, 'Time' %>
                 </div>
                 <div class="col-md-7">
                   <div class="col-md-6">
                       <%= f.time_select :time, {prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 30, ignore_date: true, ampm: true, start_hour: 6, time_separator: "</div><div class='col-md-6'>"}, {class: 'form-control'} %> 
                   </div>
                 </div>
               </div>   
             </div>

             <div class="row">
               <div class="form-group">
                 <div class="col-md-3">
                  <%= f.label :end_time, 'End Time' %>
                 </div>
                 <div class="col-md-7">
                   <div class="col-md-6">
                       <%= f.time_select :end_time, {prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 30, ignore_date: true, ampm: true, start_hour: 0, time_separator: "</div><div class='col-md-6'>"}, {class: 'form-control'} %>
                   </div>
                 </div>
               </div>   
             </div>


             <%= f.hidden_field :game_id, :value => @game.id %>

          </div>

          <div class="modal-footer">

            <button type="button" class="btn btn-default btn-simple" data-dismiss="modal">Close</button>

            <%= f.submit "Create Venue", class: "btn btn-large btn-primary btn-fill btn-round pull-right" %>

          </div>
          <% end %>
        </div>

      </div>

    </div>