<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="menu-drop">Menu</span>
            </button>
            <%= link_to root_path, :id => "logo" do %>
               <span style="font-size: 1.0em;"><i class="fa fa-soccer-ball-o"></i></span> FutFinder  
            <% end %>
        </div><!-- end div navbar-header -->           
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right" style="">

               <li class="dropdown <%= 'active' if current_page?(controller: '/businesses', action: 'index') || current_page?(controller: '/available_fields', action: 'index') %>">
                   <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                     <i class="fa fa-building"></i> Businesses <b class="caret"></b>
                   </a>
                   <ul class="dropdown-menu">
                     <li>
                      <%= link_to "All", b_businesses_path %>
                      </li>
                     <li class=""><%= link_to "Find Field", available_fields_path %></li>
                   </ul>
               </li> 
                
                <li class="<%= 'active' if current_page?(controller: '/users', action: 'index') %>">
                  <%= link_to u_users_path do %>
                    <i class="fa fa-users"></i> Users
                  <% end %>
                    
                  </li>

                <li class="dropdown <%= 'active' if current_page?(controller: '/games', action: 'new') || current_page?(controller: '/games', action: 'index') %>">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <i class="fa fa-soccer-ball-o"></i> Games <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "My Games", games_path %></li>
                      <li><%= link_to "New Game", new_game_path %></li>
                    </ul>
                </li> 

                <li data-behavior="notifications <%= 'active' if current_page?(controller: '/notifications', action: 'index')%> ">
                  <%= link_to notifications_path do%>
                    <i class="fa fa-bell"></i> <span class="badge"><%= get_number_notifications %></span>

                </li>    
                <% end %>

                  <li id="fat-menu" class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <%= current_user.first_name %> <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Profile", current_user %></li>
                      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to "Sign out", logout_path, method: "delete" %>
                      </li>
                    </ul>
                  </li>

            </ul><!-- end ul nav -->
        </div><!-- end div collapse -->
      </div><!-- End div container fluid -->
  </header>